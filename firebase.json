{
  "hosting": [
    {
      "target": "staging",
      "public": "build",
      "predeploy": [
        "npm run lint",
        "npm test",
        "NODE_ENV=staging",
        "npm run build"
      ],
      "postdeploy": [
        "rm -rf build/"
      ],
      "redirects": [
        {
          "source": "/:year/:month/:day/:title",
          "destination": "https://dbknews.com/:year/:month/:day/:title",
          "type": 301
        },
        {
          "source": "/prototype",
          "destination": "https://xd.adobe.com/view/e8f623a2-52e8-455d-7f57-05d9fa1ad038-9ec7",
          "type": 301
        },
        {
          "source": "/repo",
          "destination": "https://github.com/flex-development/dbktv",
          "type": 301
        },
        {
          "source": "/spec",
          "destination": "https://xd.adobe.com/spec/d8902b2f-721b-4006-5b21-ffd8e4e42993-aea1/",
          "type": 301
        },
        {
          "source": "/slides",
          "destination": "/slides/1",
          "type": 301
        },
        {
          "source": "/",
          "destination": "/slides/1",
          "type": 301
        }
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        },
        {
          "source": "/admin",
          "destination": "/admin/index.html"
        },
        {
          "source": "/api/**",
          "destination": "/content/**"
        }
      ],
      "cleanUrls": true,
      "trailingSlash": false,
      "ignore": [
        "**/.*",
        "**/node_modules/**",
        "babel.config.js",
        "firebase.json",
        "jest.config.js"
      ]
    },
    {
      "target": "production",
      "public": "build",
      "predeploy": [
        "npm run lint",
        "npm test",
        "NODE_ENV=production",
        "npm run build"
      ],
      "postdeploy": [
        "rm -rf build/"
      ],
      "redirects": [
        {
          "source": "/:year/:month/:day/:title",
          "destination": "https://dbknews.com/:year/:month/:day/:title",
          "type": 301
        },
        {
          "source": "/prototype",
          "destination": "https://xd.adobe.com/view/e8f623a2-52e8-455d-7f57-05d9fa1ad038-9ec7",
          "type": 301
        },
        {
          "source": "/repo",
          "destination": "https://github.com/flex-development/dbktv",
          "type": 301
        },
        {
          "source": "/spec",
          "destination": "https://xd.adobe.com/spec/d8902b2f-721b-4006-5b21-ffd8e4e42993-aea1/",
          "type": 301
        },
        {
          "source": "/slides",
          "destination": "/slides/1",
          "type": 301
        },
        {
          "source": "/",
          "destination": "/slides/1",
          "type": 301
        }
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ],
      "cleanUrls": true,
      "trailingSlash": false,
      "ignore": [
        "**/.*",
        "**/node_modules/**",
        "babel.config.js",
        "firebase.json",
        "jest.config.js"
      ]
    }
  ]
}