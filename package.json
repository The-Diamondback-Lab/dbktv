{
  "name": "@thedbklab/diamondbacktv",
  "description": "DiamondbackTV (DBKTV) is a digital signage project with the goal of streaming specially curated Diamondback content - feature stories, multimedia, article previews, and advertisements - to various televisions on campus.",
  "version": "1.0.0",
  "author": "Lexus Drumgold <lex@lexusdrumgold.design> (https://lexusdrumgold.design)",
  "scripts": {
    "preinstall": "rm -rf ./public && rm -rf node_modules",
    "lint-components": "eslint ./src/components/**/*.jsx ./*.js --fix",
    "lint-functions": "npm run --prefix functions lint",
    "lint": "npm run lint-components && npm run lint-functions",
    "dev-components": "NODE_ENV=development preact watch --p 3000",
    "dev-functions": "npm run --prefix functions dev",
    "test": "clear && NODE_ENV=test jest --detectOpenHandles --passWithNoTests",
    "build": "rm -rf ./build && preact build --no-prerender",
    "functions": "npm --prefix functions start",
    "hosting": "firebase serve --only hosting",
    "start": "NODE_ENV=staging npm run build && firebase serve"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/The-Diamondback-Lab/dbktv.git"
  },
  "keywords": [
    "the diamondback",
    "digital signage",
    "iadea player",
    "preact",
    "sass"
  ],
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/The-Diamondback-Lab/dbktv/issues"
  },
  "homepage": "https://github.com/The-Diamondback-Lab/dbktv#README",
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.19",
    "@fortawesome/free-solid-svg-icons": "^5.9.0",
    "@fortawesome/react-fontawesome": "^0.1.4",
    "jquery": "^3.4.1",
    "preact": "^10.0.0-beta.2",
    "preact-async-route": "^2.2.1",
    "preact-router": "^3.0.1",
    "react-dfp": "^0.13.0",
    "showdown": "^1.9.0"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/plugin-proposal-export-default-from": "^7.5.2",
    "@babel/plugin-proposal-export-namespace-from": "^7.2.0",
    "@babel/plugin-proposal-throw-expressions": "^7.2.0",
    "@feathersjs/configuration": "^2.0.6",
    "@feathersjs/errors": "^3.3.6",
    "@feathersjs/express": "^1.3.1",
    "@feathersjs/feathers": "^3.3.1",
    "babel-eslint": "^11.0.0-beta.0",
    "babel-jest": "^24.7.1",
    "babel-loader": "^8.0.6",
    "cors": "^2.8.5",
    "eslint": "^6.1.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-config-standard-jsx": "^7.0.0",
    "eslint-config-standard-preact": "^1.1.6",
    "eslint-config-synacor": "^2.0.2",
    "eslint-plugin-import": "^2.17.1",
    "eslint-plugin-jest": "^22.5.1",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-react": "^7.14.2",
    "eslint-plugin-standard": "^4.0.0",
    "express": "^4.16.4",
    "firebase-admin": "^8.2.0",
    "firebase-functions": "^3.0.2",
    "firebase-tools": "^7.1.0",
    "flamelink": "^1.0.0-alpha.19",
    "html-webpack-plugin": "^3.2.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.8.0",
    "joi": "^14.3.1",
    "node-sass": "^4.12.0",
    "preact-cli": "3.0.0-next.19",
    "preact-cli-plugin-env-vars": "^1.2.1",
    "preact-render-spy": "^1.2.1",
    "sass-loader": "7.1.0",
    "webpack": "^4.35.3"
  },
  "browserslist": [
    ">1%",
    "last 4 versions",
    "Firefox ESR",
    "not ie < 11"
  ],
  "engines": {
    "node": "10"
  }
}
